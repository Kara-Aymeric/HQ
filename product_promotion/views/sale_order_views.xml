<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="kara_retailer_view_order_form" model="ir.ui.view">
        <field name="name">kara.retailer.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='discount']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="before">
                <field name="discount_type" />
                <field name="discount_product" groups="product.group_discount_per_so_line" optional="show"
                       attrs="{'required':[('discount_type','!=',False)], 'readonly':[('discount_type','=',False)]}"/>
                <field name="total_discount" groups="product.group_discount_per_so_line" optional="show" readonly="1"/>
                <field name="price_tax" />
            </xpath>

            <xpath expr="//group[@name='sale_total']/field[@name='tax_totals_json']" position="after">
                <field name="amount_discount" string="Including discount of" groups="product.group_discount_per_so_line" />
            </xpath>
        </field>
    </record>
</odoo>
